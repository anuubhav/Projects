all: bin/btest
 

bin/clothing.o: clothing.h clothing.cpp product.h
	g++ -g -Wall -c clothing.cpp -o bin/clothing.o

bin/movie.o: movie.h movie.cpp product.h
	g++ -g -Wall -c movie.cpp -o bin/movie.o

bin/book.o: book.h book.cpp product.h
	g++ -g -Wall -c book.cpp -o bin/book.o

bin/btest: bin/.dirstamp btest.cpp bin/book.o  
	g++ -g -Wall btest.cpp bin/book.o -o bin/btest

